<!DOCTYPE html>
<html>
<head>
  <title>Reddit</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src='assets/bundle.js'></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="NavBar"></div>
  <script>
    React.render(
      React.createElement(NavBar, {
        links: <%= navbar_links.html_safe %>,
        rootPath: <%= "\"#{root_path}\"".html_safe %>,
        sitename: "Read It!" 
      }),
      document.getElementById("NavBar")
    );
  </script>
  <div class='container'>
    <%= yield %>
  </div>
</body>
</html>
